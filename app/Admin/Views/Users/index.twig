{% extends "/layout.twig" %}

{% block content %}
<div class="content-wrapper">

  <section class="content-header">
    <h1>
      Пользователи
    </h1>
  </section>

  <!-- Main content -->
  <section class="content">

    <!-- Default box -->
    <div class="box">
      <!-- /.box-header -->
      <div class="box-body">
        <div class="form-group">
          <a href="/admin/users/create" class="btn btn-success">Добавить</a>
        </div>
        <table id="example1" class="table table-bordered table-striped">
          <thead>
          <tr>
            <th>ID</th>
            <th>Имя</th>
            <th>E-mail</th>
            <th>Аватар</th>
            <th>Роль</th>
            <th>Действия</th>
          </tr>
          </thead>
          <tbody>

          {% for user in users %}

            <tr>
            <td>{{ user.id }}</td>
            <td>{{ user.name }}</td>
            <td>{{ user.email }}</td>
            <td>
              <img src="/uploads/{{ user.photo }}" alt="" class="img-responsive" width="150">
            </td>
            <td>
              {% if user.is_admin %}
                Администратор
              {% else %}
                Пользователь
              {% endif %}
            </td>
            <td class="td-actions">
              <a href="/admin/user/{{ user.id }}/edit" class="fa fa-pencil"></a>
              <form method="GET" action="/admin/user/{{ user.id }}/delete">
              <button class="delete-button" onclick="return confirm('are you sure?');" type="submit" class="delete">
              <i class="fa fa-remove"></i>
              </button>
              </form>
            </td>
          </tr>

          {% endfor %}

          </tfoot>
        </table>
      </div>
      <!-- /.box-body -->
    </div>
    <!-- /.box -->

  </section>
  <!-- /.content -->
</div>
{% endblock %}