{% extends "/layout.twig" %}

{% block content %}
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      Редактировать категорию
    </h1>
  </section>

  <!-- Main content -->
  <section class="content">

    <form enctype="multipart/form-data" method="POST" action="/admin/category/update">

      {% if(errors) %}
        <div class="alert alert-danger" role="alert">
        {{ errors }}
        </div>
      {% endif %}

      <!-- Default box -->
      <div class="box">
        <div class="box-body">
          <div class="col-md-6">

            <div class="form-group">
              <label for="exampleInputFile">Фото</label>
              <input name="photo" type="file" id="exampleInputFile">
            </div>

            <img width="200" src="/uploads/{{ category.photo }}" alt="">
            <br><br>

            <div class="form-group">
              <label for="exampleInputEmail1">Название</label>
              <input name="title" type="text" class="form-control" id="exampleInputEmail1" placeholder="" value="{{ category.title }}">
            </div>

            <div class="form-group">
              <input name="id" type="hidden" value="{{ category.id }}">
            </div>

          </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
          <a href="/admin/categories">
            Назад
          </a>
          <button class="btn btn-warning pull-right">Изменить</button>
        </div>
        <!-- /.box-footer-->
      </div>
      <!-- /.box -->
    </form>
  </section>
  <!-- /.content -->
</div>
{% endblock %}